{
  "label": "$SERVICE_NAME Deployment Policy",
  "description": "AI Classification and Detection service Horizon Deployment Policy",
  "service": {
    "name": "$SERVICE_NAME",
    "org": "$HZN_ORG_ID",
    "arch": "*",
    "serviceVersions": [
      {
        "version": "$SERVICE_VERSION",
        "priority":{}
      }
    ]
  },
  "properties": [
  ],
  "constraints": [
    "hasCamera == true",
    "detection == true"
  ],
  "userInput": [
    {
      "serviceOrgid": "$HZN_ORG_ID",
      "serviceUrl": "$SERVICE_NAME",
      "serviceVersionRange": "[0.0.0,INFINITY)",
      "inputs": [
        {
          "name": "LABELS",
          "value": "Default,Fire"
        },
        {
          "name": "DETECT",
          "value": "Fire"
        },
        {
          "name": "DATA_DIR",
          "value": "/usr/share"
        },
        {
          "name": "USE_WEBCAM",
          "value": "true"
        },
        {
          "name": "USE_RADIO",
          "value": "false"
        },
        {
          "name": "LD_LIBRARY_PATH",
          "value": "/opt/vc/lib"
        },
        {
          "name": "GATEWAY_API",
          "value": "http://localhost:9000/api"
        } 
      ]
    }
  ]
}
